<div class="container">
  <h1>Available Offers</h1>

  <div class="food-cards">
    <% @offers.each do |offer| %>
      <%= link_to offer_path(offer.id) do  %>
        <div class="food-card">
          <% if offer.photo.attached? %>
            <%= cl_image_tag offer.photo.key, height: 200, crop: :fill %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80", alt: "food", width: 200 %>
          <% end %>
          <div class="food-card-infos">
            <div>
              <h2><%= offer.meal_name %></h2>
              <p><%= offer.meal_description %></p>
            </div>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered food-avatar" />
            <h2 class="fixed-price"><%= offer.price %>â‚¬</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= link_to "Add an offer", offer_new_path, class: "btn btn-success m-3" %>
</div>

<%= render "shared/footer" %>
